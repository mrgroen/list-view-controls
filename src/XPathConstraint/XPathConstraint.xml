<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.listviewcontrols.XPathConstraint" offlineCapable="true" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>XPath constraint</name>
    <description>Filter Mendix list views using XPath.</description>
    <icon></icon>
    <properties>
        <property key="listViewEntity" type="entity">
            <caption>List view with entity</caption>
            <category>General</category>
            <description>Select the same entity as the list view that this widget should interact with. If multiple list views with this entity are found, the closest is used</description>
        </property>
        <property key="group" type="string" required="false">
            <caption>Group name</caption>
            <category>General</category>
            <description>By default all XPath Constraints should match. When a group name is specified only one of the constraints in the group has to match</description>
        </property>
        <property key="xpathConstraintAttribute" type="attribute" required="true">
            <caption>XPath constraint</caption>
            <category>General</category>
            <description>Select the attribute of the context object which contains the XPath constraint.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
    </properties>
</widget>
